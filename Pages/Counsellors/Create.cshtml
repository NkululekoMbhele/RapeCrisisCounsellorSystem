@page
@using RapeCrisisCounsellorSystem.Models
@model RapeCrisisCounsellorSystem.Pages.Counsellors.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Counsellor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Counsellor.Name" class="control-label"></label>
                <input asp-for="Counsellor.Name" class="form-control" />
                <span asp-validation-for="Counsellor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Counsellor.Surname" class="control-label"></label>
                <input asp-for="Counsellor.Surname" class="form-control" />
                <span asp-validation-for="Counsellor.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Counsellor.Email" class="control-label"></label>
                <input asp-for="Counsellor.Email" class="form-control" />
                <span asp-validation-for="Counsellor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Counsellor.FirstLanguage" class="control-label"></label>
                <input asp-for="Counsellor.FirstLanguage" class="form-control" />
                <span asp-validation-for="Counsellor.FirstLanguage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Counsellor.gender" class="control-label"></label>
                <select asp-for="Counsellor.gender" class="form-control" asp-items="Html.GetEnumSelectList<Counsellor.Gender>()"><option>Select Gender...</option></select>
                <span asp-validation-for="Counsellor.gender" class="text-danger"></span>
            </div>
                 <div class="form-group">
                <label asp-for="Counsellor.Description" class="control-label"></label>
                <input asp-for="Counsellor.Description" class="form-control" />
                <span asp-validation-for="Counsellor.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
