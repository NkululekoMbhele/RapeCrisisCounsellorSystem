@page
@model RapeCrisisCounsellorSystem.Pages.Counsellors.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Counsellor[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Counsellor[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Counsellor[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Counsellor[0].FirstLanguage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Counsellor[0].gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Counsellor[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Counsellor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstLanguage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CounsellorId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CounsellorId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CounsellorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
